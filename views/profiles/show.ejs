<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
  <div>
    <img
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s avatar"
    >
  </div>
  <h1>Look at <%= isSelf ? "you" : profile.name %>!</h1>
  <h2><%= profile.name %>'s Goals!</h2>
  <% if (isSelf) { %>
    <h2>Add a Goal! Keep motivated!</h2>
    <form action="/profiles/<%= profile._id %>/goals" method="POST">
      <label>
        Goal:
        <input type="text" name="exerGoal" autocomplete="off">
      </label>
      <label>
        Complete by:
        <input type="datetime-local" name="time">
      </label>
      <button type="submit">Add Goal</button>
    </form>
  <% } %>
  <% if (profile.goals.length) { %>
    <h2>
      <%= isSelf ? 'You have' : `${profile.name} has` %> some goals to work on! Take a look!
    </h2>
    <% profile.goals.forEach(goal => { %>
      <h3>
        <%= goal.exerGoal %> should be completed by <%= goal.time %>
        <% if (isSelf) { %>
          
        <% } %>
      </h3>
    <5 }) %> 
  <% } %>
  
</main>

