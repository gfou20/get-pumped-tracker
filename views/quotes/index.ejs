<%- include('../partials/html-head') %>

<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>

  <img src="https://assets.rebelmouse.io/eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..C8DbaIqIjNepj58tBvb4f85VXtcPtP_69iF0INMXgDk/img.jpg" alt="man flexing in mirror">
  <h2>Motivate with a Quote!</h2>
  <% if (user) { %>
    <form action="/quotes" method="POST">
    <label for="content">Quote:</label>
    <input type="text" name="content" autocomplete="off">
    <button type="submit">Add your Quote!</button>
  </form>
  <% } %>
  <ul>
    <% quotes.forEach(quote => { %>
      <li>
        <p><%= quote.content %> 👍</p>
    <% }) %>
  </ul>

</main>

